<h1 class="border-bottom"><%= @task.title %></h1>
<h3>- <%= @task.details%> </h3>

<%if @task.completed %>
  <h4 id='completed'>Completed</h4>
<%else %>
  <h4 id='not-completed'>Not Completed</h4>
<% end %>
<h4 id='btn'><%= link_to 'Edit this task', edit_task_path(@task), class: "btn btn-success"%></h4>

