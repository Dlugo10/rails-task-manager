<h1 class="border-bottom">My Tasks</h1>

<ul class='task-list'>
  
  <% @tasks.each do |task|%>
    <li>
      <% if task.completed %>
        <i class="fa fa-check-square"></i>
      <% else %>
        <i class="fa fa-square"></i>
      <% end %>
      <%= link_to task.title, task_path(task) %>
      <%= link_to 'x', task_path(task), method: :delete, data: { confirm: "Are you sure?" }%>
    </li>
  <% end %>
</ul>

<div id='btn'><%=  link_to "Create a new task", new_task_path, class: "btn btn-success" %></div>